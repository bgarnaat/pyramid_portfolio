{% extends 'layout.jinja2' %}


{% block title %}Portfolio of projects{% endblock %}


{% block body %}
    <section class="project-list">
        {% for project in projects %}
            <article class="project">
                <img class="image-project" src="{{ request.route_url('image', id=project.id) }}">
                <h2>{{ project.title }}</h2>
                <h3><a href="{{ project.repository }}"></a></h3>
                <h3><a href="{{ project.website }}"></a></h3>
                <p>{{ project.description }}</p>
            </article>
        {% endfor %}
    </section>
{% endblock %}
