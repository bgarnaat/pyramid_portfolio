{% extends 'layout.jinja2' %}


{% block title %}Add Project{% endblock %}


{% block body %}

    <form method="POST" enctype="multipart/form-data">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
        <p>
            <label for="title">Title: </label>
            <input type="text" name="title" value='{{ project.title }}'>
        </p>
        <p>
            <label for="description">Description: </label>
            <input type="textarea" name="description" value="{{ project.description }}">
        </p>
        <p>
            <label for="repository">Repository: </label>
            <input type="url" name="repository" value="{{ project.repository }}">
        </p>
        <p>
            <label for="website">Website: </label>
            <input type="url" name="website" value="{{ project.website }}">
        </p>
        {% if project.image_id %}
            <p>
                <img src="{{ request.route_url('image', id=project.image_id) }}">
            </p>
        {% endif %}
        <p>
            <label for="image">Image: </label>
            <input type="file" name="image" accept="image/*">
        </p>
        <p>
            <input type="submit" name="Submit">
        </p>
    </form>

{% endblock %}
